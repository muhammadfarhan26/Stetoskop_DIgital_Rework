<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutHeader1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_main"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack1"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginEnd="425dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:contentDescription="@string/app_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/abc_vector_test"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:text="@string/kembali"
            android:textColor="#FBFBFB"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/btnBack1"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TableLayout
        android:layout_width="403dp"
        android:layout_height="545dp"
        android:layout_marginEnd="62dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="102dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutHeader1">

        <TableRow android:background="#22ff">

            <TextView
                android:layout_column="1"
                android:padding="10dip"
                android:text="No" />

            <TextView
                android:gravity="right"
                android:padding="10dip"
                android:text="Tanggal Rekam" />

            <TextView
                android:gravity="center"
                android:padding="3dip"
                android:text="Hasil" />
        </TableRow>

        <TableRow android:background="#22ff">

            <TextView
                android:layout_column="1"
                android:padding="10dip"
                android:text="1" />

            <TextView
                android:gravity="right"
                android:padding="10dip"
                android:text="8 Agustus 2021" />

            <TextView
                android:gravity="center"
                android:padding="3dip"
                android:text="Status Jantung anda normal" />
        </TableRow>


    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>